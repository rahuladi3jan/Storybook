{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "dist/types",
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "jsx": "react",
    "resolveJsonModule": true,
    "strict": true,
    "target": "ESNext",
    "outDir": "dist",
    "lib": ["dom", "dom.iterable", "ESNext"],
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "isolatedModules": true,
    "noImplicitAny": false
  },
  "include": ["src", "**/*.ts", "**/*.tsx", "styles"],
  "exclude": [
    "node_modules",
    "src/screens",
    "src/**/*.stories.tsx",
    "src/**/*.stories.mdx",
    "src/**/*.test.tsx",
    "build",
    "dist"
  ]
}
